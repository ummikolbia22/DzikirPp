<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menuback"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="295dp"
        android:layout_height="37dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/atomic_age"
        android:text="Dzikir Pagi dan Petang"
        android:textColor="#983F04"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Kumpulan Do'a dan Dzikir sesuai sunnah"
        android:textColor="#CA4D09"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/img_pagi"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/muncul" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="147dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/happy_monkey"
        android:gravity="center"
        android:text="Dzikir Pagi"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/img_pagi"
        app:layout_constraintStart_toStartOf="@+id/img_pagi"
        app:layout_constraintTop_toBottomOf="@+id/img_pagi" />

    <ImageView
        android:id="@+id/img_sore"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/terbit" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/happy_monkey"
        android:gravity="center"
        android:text="Dzikir Petang"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/img_sore"
        app:layout_constraintStart_toStartOf="@+id/img_sore"
        app:layout_constraintTop_toBottomOf="@+id/img_sore" />


</androidx.constraintlayout.widget.ConstraintLayout>